{% extends 'base.html.twig' %}

{% block title %}Expense index{% endblock %}

{% block body %}
    <h1>Expense index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Exp_montant</th>
                <th>Description</th>
                <th>Exp_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for expense in expenses %}
            <tr>
                <td>{{ expense.id }}</td>
                <td>{{ expense.expMontant }}</td>
                <td>{{ expense.description }}</td>
                <td>{{ expense.expDate }}</td>
                <td>
                    <a href="{{ path('app_expense_show', {'id': expense.id}) }}">show</a>
                    <a href="{{ path('app_expense_edit', {'id': expense.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_expense_new') }}">Create new</a>
{% endblock %}
